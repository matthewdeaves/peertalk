{
  "mcpServers": {
    "classic-mac-hardware": {
      "command": "python",
      "args": [
        ".claude/mcp-servers/classic-mac-hardware/server.py"
      ],
      "env": {
        "MACHINES_CONFIG": ".claude/mcp-servers/classic-mac-hardware/machines.json"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/isr-safety-check.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/isr-safety-check.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/quick-compile.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/adsp-userflags.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/quick-compile.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/adsp-userflags.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/coverage-check.sh"
          }
        ]
      }
    ]
  }
}
